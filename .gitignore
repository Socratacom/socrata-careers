# Ignore system files and typical project files
*~
.DS_Store
.svn
.cvs
*.bak
*.swp
Thumbs.db

# Sublime Text
*.sublime-workspace

# PHPStorm
*.idea

# Ignore everything in the root except the "wp-content" directory and the FrameResize.html.
/*
!.gitignore
!wp-content/
!FrameResize.html
 
# Ignore everything in the "wp-content" directory, except the "plugins" and "themes" directories.
wp-content/*
!wp-content/plugins/
!wp-content/themes/
 
# Ignore everything in the "plugins" directory, except the plugins you specify
wp-content/plugins/*
!wp-content/plugins/socrata-headlines/
!wp-content/plugins/socrata-team/
 
# Ignore everything in the "themes" directory, except the themes you specify
wp-content/themes/*
!wp-content/themes/socrata-bootstrap/
!wp-content/themes/sage/
